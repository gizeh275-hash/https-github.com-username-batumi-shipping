@echo off
echo ================================================
echo   Установка зависимостей для сайта...
echo ================================================
echo.

cd /d "%~dp0"

echo Установка пакетов (может занять 2-3 минуты)...
call npm install

if %ERRORLEVEL% NEQ 0 (
    echo.
    echo ОШИБКА: Не удалось установить зависимости.
    echo.
    echo РЕШЕНИЕ:
    echo 1. Закройте эту консоль
    echo 2. Перезагрузите компьютер
    echo 3. Снова запустите этот файл
    echo.
    pause
    exit /b 1
)

echo.
echo ================================================
echo   Установка завершена успешно!
echo ================================================
echo.
echo Теперь запустите файл: run_dev.bat
echo.
pause
